{
  "manifest_version": 3,
  "name": "Sopeko - Reddit Portfolio Tracker",
  "description": "Displays stock tickers and portfolio holdings mentioned by Reddit users in their comment history.",
  "version": "1.0.0",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://www.reddit.com/*",
    "http://127.0.0.1:8080/*",
    "https://sopeko.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.reddit.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
